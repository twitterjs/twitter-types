{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": [
      "ESNext",
    ],
    "module": "ESNext",
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "target": "ES2020",
    "importsNotUsedAsValues": "error",
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "watch": true,
    "moduleResolution": "Node",
    "incremental": true,
  },
  "include": [
    "v*/**/*",
    "default/**/*",
  ],
}